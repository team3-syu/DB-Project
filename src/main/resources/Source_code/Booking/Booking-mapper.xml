    <insert id="insertMenu" parameterType="Source_code.Booking.BookingDTO">
        INSERT INTO TBL_MENU (
                               BOOK_DATE
                             ,MEM_CODE
                             ,MEDI_CODE
                             ,MEDI_COUNT
                             ,BOOK_STATUS
        )
        VALUES (
                 #{book_date}
               , #{ mem_code }
               , (SELECT m_code FROM MEDICINE WHERE m_name like #{ mem_name })
               , #{ medi_count }
               , 'N'
               )
    </insert>
